// default color
$blue = #148aed
$dark = #383d41
$black = #333743
$yellow = #f4ce2c
$green = #50a347
$orange = #ff9900
$black-light = #333333
$gray = #999999
$white = #e5e5e5
$red = #ff4949
$gf = #ffffff


$border-default = 1px solid $white

.btn
    display inline-block
    width 120px
    height 40px
    margin 0
    padding 0
    color $black
    line-height 40px
    text-align center
    border-radius 0
    border-width 1px
    border-style solid 
    border-color transparent
    background-color $gf
    white-space nowrap
    cursor pointer
    &.btn-green
        color $green
        border-color $green
        &:hover
        &.active
            color $gf
            background-color $green
    &.btn-blue
        color $blue
        border-color $blue
        &:hover
        &.active
            color $gf
            background-color $blue
    &.btn-orange
        color $orange
        border-color $orange
        &:hover
        &.active
            color $gf
            background-color $orange
    &.btn-yellow
        color $yellow
        border-color $yellow
        &:hover,
        &.active
            color $gf
            background-color $yellow
    &.btn-red
        color $red
        border-color $red
        &:hover
        &.active
            color $gf
            background-color $red
    &.btn-white
        color $white
        border-color $white
        &:hover
        &.active
            color $gf
            background-color $white

.pad-line-default
    padding 0 10px