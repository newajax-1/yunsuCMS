@import "uiStatic"

// reset css
*
    margin: 0px
    padding: 0px

html,
body{
    background-color: $f4;
    font-family: "Microsoft Yahei"
}

ul,
ol,
li
    list-style: none

// common css

.fl
    float: left
.fr
    float: right

.clearfix
    &::before,
    &::after
        content: ""
        display: table
    &::after
        clear: both

.abs
    position: absolute
    top: 0
    left: 0

.rel
    position: relative

.fixed
    position: fixed
    top: 0
    left: 0

.hide
    display: none

.hidden
    visibility: hidden
    width:0
    height: 0


// public css
.layout-content
    position: relative
    margin: 50px 0 0 180px
    background-color: $f4 
    .content-title
        height: 18px
        padding: 15px 0 15px 10px
        border-bottom: 1px solid $e5
        background-color: $gf
        span
            position: relative
            top: -1px
            float: left
            padding-left: 10px
            line-height: 18px
            border-left: 4px solid $default_blue 

    .content-search
        padding: 12px 0 12px 20px
        border-bottom: 1px solid $e5
        .el-form-item
            margin-right: 0
            margin-left: 35px
            margin-bottom: 0
            vertical-align: bottom
            &:last-child,
            &:first-child
                margin-left: 0
        .el-date-editor--date
            width: 105px
            .el-input__inner
                padding-right: 30px
                width: 100%
            .el-input__icon
                width: 30px

        .el-form-item__label
            padding: 0
            font-size: 12px
            line-height: 30px
        .el-form-item__content
            line-height: 30px
            position: relative

    .content-buttons
        position: absolute
        top: 15px
        right: 20px
        width: auto
        .btn
            width: auto
            height: auto
            margin-left: 25px
            background: transparent
            border 0 none
            color: $g3
            line-height: 20px
            &:hover
                background: transparent
                border 0 none
                text-decoration: underline
                color: $default_blue
            .fa
                color: $default_blue
    .tab-title
        padding: 10px 10px 0 10px
        margin: 0 10px
        background-color: $gf
        .el-tabs__header
            margin-bottom: 0
        .el-tabs__item
            width: 135px
            height: 40px
            padding: 0
            font-size: 12px
            text-align: center
            &.is-active
                color: $g3; 
                border-radius: 0
                &::before
                    content: ""
                    position: absolute
                    top: -1px
                    left: 0
                    width: 100%
                    height: 2px
                    background-color: $default_blue
    .table-wrap
        margin: 0 10px
        padding: 8px 10px 0 10px
        background-color: $gf
        .el-table__header
            th
                padding: 0
                font-size: 14px
                color: $_g69
                text-align: center
                font-weight: 400
                background-color: $table_header_bgcolor
                >.cell
                    line-height: 20px
                    background-color: $table_header_bgcolor
        .el-table__body
            td
                font-size: 12px
                padding 0 12px
                >.cell
                    padding: 0
        .el-table
            .el-table__row
                td
                    &:last-child
                        text-align: center
                .el-table-column--selection
                    padding: 0
                    text-align: center

    .table-page
        padding: 10px 0
        .el-pagination
            padding: 0
    .message
        margin-bottom: 10px
        &.center
            text-align: center
        &.mt-10
            margin-bottom: 0
            margin-top: 10px
    .default-dialog
        .el-dialog__header
            padding: 20px
            background-color: $dialog_blue
            .el-dialog__title,
            .el-dialog__close
                color: $gf
                font-size: 16px
                line-height: 16px
                font-weight: 400
        .el-form-item
            margin: 0
            margin-bottom: 16px
            .el-form-item__content
                height: 30px
                font-size: 12px
            .el-input__icon 
                width: 30px
            .el-input
                line-height: 30px
            .el-input__inner
                width: 180px
                height: 30px
                padding-right: 6px
            .el-date-editor
                width: 105px
        .table-wrap
            margin: 0
            padding: 0
            .el-input
                &.is-disabled
                    .el-input__icon
                        &::before,
                        &::after
                            content: ""
                    .el-input__inner
                        background-color: $gf
            .el-input__inner
                padding-right: 0
                border: 0 none
            .el-date-editor
                width: 105px
                .el-input__icon
                    &::before,
                    &::after
                        content: ""
            .cell
                text-overflow: initial
        &.dialog-large
            .el-dialog--large
                width: 1024px
            &.dialog-more
                .el-dialog--large
                    width: 1240px
        &.dialog-small
            .el-dialog--small
                width: 720px
        &.dialog-tiny
            .el-dialog--tiny
                width: 360px
